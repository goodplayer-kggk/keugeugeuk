<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <!-- 모서리 둥글게 -->
    <corners android:radius="0dp" />

    <!-- 황금 그라데이션 -->
    <gradient
        android:type="linear"
        android:angle="45"
        android:startColor="#FFD700"
        android:centerColor="#FFC124"
        android:endColor="#B8860B"
        android:useLevel="false" />

    <!-- 테두리 -->
    <stroke
        android:width="3dp"
        android:color="#DAA520" />

    <!-- 내부 약간 음영 (골드바 음각 효과) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>